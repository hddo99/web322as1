 <div class="dashboard_area">
    <h3 style="color:black;">Hello {{name}}</h3>
    <h3>Email: {{email}}</h3>
    <div class = "controlsec">
      <a href="/login/addproduct" class="btn_3" style="color:lavender; transition: all 9.5s ease;">Upload product</a>
    </div>
    <div class = "controlsec">
      <a href="/login/logout" class="btn_3" style="color:lavender; transition: all 9.5s ease;">Sign out</a>
    </div>
    
</div>


<!--================Cart Area =================-->
  
       <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
              </tr>
            </thead>
            <tbody>
              <h4>Your inventory: ({{totalproduct}}) items</h4>
              {{#each product_list}}
              <tr>
                <td>
                  <div class="media">
                    
                      <img src="/img/{{this.p_Pic}}" alt="" align="left"/>
                    
                      <p>{{this.p_name}}</p>
                    </div>
                  </div>
                </td>
                <td>
                  <h5>{{this.p_price}} $CDN</h5>
                </td>
                <td>
                  <div class="product_count">
                    <input class="input-number" type="text" value="{{this.p_quantity}}">
                  </div>
                </td>
                <td>
                  <form class="row contact_form" action="/login/clerkrequest/{{_id}}" method="post" style="display: inline-block;">
                          <button type="submit" value="submit" class="controlsec">
                          edit
                        </button>
                    </form>
                </td>
                <td>
                  <form class="row contact_form" action="/login/clerkdelete/{{_id}}" method="post" style="display: inline-block;">
                        <button type="submit" value="submit" class="controlsec">
                          delete
                        </button>
                    </form>
                </td>

              </tr>
             {{/each}}
            </tbody>
        </table>
  
         
